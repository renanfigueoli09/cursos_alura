console.log(`Trabalhando com Condicionais`);
// const salvador = `Salvador`;
// const saoPaulo=`São Paulo`;
// const rioDeJaneiro = `Rio de Janeiro`

const listaDeDestinos = new Array(
    "Salvador",
    "São Paulo",
    "Rio de Janeiro"
);


const idadeComprador = 17;
const estaAcompanhado = true;
console.log("Destinos possiveis");
console.log(listaDeDestinos);

if (idadeComprador >= 18) {

    listaDeDestinos.splice(1, 1); //deletar na segunda posição da lista(de o a ...) e a quantidade de elementos,

    console.log("São Paulo foi comprada\n");
    console.log(listaDeDestinos, "\n");

} else if (estaAcompanhado == true) {
    console.log("Comprador está acompanhado");
    console.log("São Paulo foi comprado");
    listaDeDestinos.splice(1, 1);
    console.log(listaDeDestinos, "\n");
} else {
    console.log("Apenas maiores de idade podem comprar passagens")
}


